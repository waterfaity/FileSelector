<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/file_selector_click_style_bg_white"
    android:paddingLeft="2dp"
    android:paddingTop="5dp"
    android:paddingRight="2dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/file_selector_ic_unknown" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="middle"
            android:paddingRight="40dp"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/fileSelectorTextColorBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="info"
            android:textColor="@color/fileSelectorTextColorBlack"
            android:textSize="10dp" />

    </LinearLayout>

    <View
        android:id="@+id/view_select_state"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/file_selector_style_select_state" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <View
        android:id="@+id/checkbox_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox"
        android:layout_alignTop="@+id/checkbox"
        android:layout_alignRight="@+id/checkbox"
        android:layout_alignBottom="@+id/checkbox" />

</RelativeLayout>